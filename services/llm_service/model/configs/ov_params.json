{
  "name": "llama3-ko-ov-npu",
  "backend": "ov_genai",

  "model": {
    "hf_model_id": "srang992/Llama-3.2-3B-Instruct-ov-INT4",
    "cache_dir": "services/llm_service/huggingface",
    "export_precision": "int4_sym"
  },

  "load_params": {
    "device": "AUTO:NPU,CPU",
    "num_threads": 8
  },

  "generation": {
    "max_new_tokens": 180,
    "temperature": 0.9,
    "top_p": 0.9,
    "top_k": 40,
    "stop": []
  },

  "policy": {
    "enforce_max_lines": 0,
    "force_suffix": ""
  },

  "multiturn": {
    "ctx_strategy": "budgeted_compact",
    "context_turns": 8,
    "ctx_clip_chars": 900,
    "summary_turns": 12,
    "token_per_char": 0.6,
    "reserve_tokens": 256
  }
}
